server:
  port: 8087

spring:
  application:
    name: recommendation-service
  datasource:
    url: jdbc:mysql://localhost:3306/recommendation_db?createDatabaseIfNotExist=true
    username: recommendation-service_user
    password: password
    driver-class-name: com.mysql.cj.jdbc.Driver
  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true
    properties:
      hibernate:
        dialect: org.hibernate.dialect.MySQL8Dialect

management:
  endpoints:
    web:
      exposure:
        include: health,info
